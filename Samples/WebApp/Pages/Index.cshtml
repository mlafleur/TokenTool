                        <a href="@Model.V1ImplicitUri" class="btn btn-primary">Start OAuth Flow</a>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="container" style="margin-top: 50px;">
        <h2>v2 Endpoint</h2>
        <div class="row">
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Authorization Code Grant</h5>
                        <p class="card-text"></p>
                        <a href="@Model.V2AuthUri" class="btn btn-primary">Start OAuth Flow</a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Implicit Grant</h5>
                        <p class="card-text"></p>
